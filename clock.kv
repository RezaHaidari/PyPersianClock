<RobotoButton@Button>:
	font_name: 'Roboto'
	font_size: 25
	bold: True
	background_normal: 'button_normal.png'
	background_down: 'button_down.png'
	border: (2,2,2,2)

ClockLayout:
	time_prop: time
	orientation: 'vertical'

	Label:
		id: time
		text: ''
		font_name: 'Roboto'
		font_size: 60
		markup: True
	BoxLayout:
		height: 90
		orientation: 'horizontal'
		padding: 20
		spacing: 20
		size_hint: (1,None)
		

		RobotoButton:
			id: start_stop
			text: 'شروع'
			on_press: app.start_stop()

			
		RobotoButton:
			id: reset
			on_press: app.reset()
			text: 'Reset'
			background_normal: 'red_button_normal.png'
			background_down: 'red_button_down.png'
			
	Label:
		id: stopwatch
		text: '00:00.[size=40]00[/size]'
		font_name: 'Roboto'
		font_size: 60
		markup: True

